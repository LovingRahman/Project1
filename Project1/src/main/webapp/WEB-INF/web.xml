<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>


    <!-- in the servlet tag, we map the class to a name -->
    <servlet>
        <servlet-name>Employee</servlet-name>
        <servlet-class>org.example.controller.EmployeeServlet</servlet-class>
    </servlet>
    <!-- In the servlet mapping tag, we connect the servlet name with a url-pattern -->
    <servlet-mapping>
        <!-- here it is very important that we match what set as the name in the servlet tag -->
        <servlet-name>Employee</servlet-name>
        <url-pattern>/Employee</url-pattern>
    </servlet-mapping>

    <!-- in the servlet tag, we map the class to a name -->
    <servlet>
        <servlet-name>Ticket</servlet-name>
        <servlet-class>org.example.controller.TicketServlet</servlet-class>
    </servlet>
    <!-- In the servlet mapping tag, we connect the servlet name with a url-pattern -->
    <servlet-mapping>
        <!-- here it is very important that we match what set as the name in the servlet tag -->
        <servlet-name>Ticket</servlet-name>
        <url-pattern>/Ticket</url-pattern>
    </servlet-mapping>

    <!-- in the servlet tag, we map the class to a name -->
    <servlet>
        <servlet-name>EmployeeLogin</servlet-name>
        <servlet-class>org.example.controller.EmployeeLogin</servlet-class>
    </servlet>
    <!-- In the servlet mapping tag, we connect the servlet name with a url-pattern -->
    <servlet-mapping>
        <!-- here it is very important that we match what set as the name in the servlet tag -->
        <servlet-name>EmployeeLogin</servlet-name>
        <url-pattern>/EmployeeLogin</url-pattern>
    </servlet-mapping>

</web-app>